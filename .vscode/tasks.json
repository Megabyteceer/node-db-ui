{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build"
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": "build",
			"label": "tsc: watch - tsconfig.json",
			"runOptions": {
			  "runOn": "folderOpen"
			}
		}
	]
}