{
	"compilerOptions": {
		"lib": ["es2021", "DOM"],
		"checkJs": true,
		"allowJs": true,
		"noUnusedLocals": true,
		"target": "ES5",
		"module": "UMD",
		"incremental": true,
		"outDir": "distrib",
		"sourceMap": true,
		"removeComments": false,
		"moduleResolution": "node",
		"diagnostics": false,
		"skipLibCheck": true,
		"watch": true,
		"allowSyntheticDefaultImports": true,
		"assumeChangesOnlyAffectDirectDependencies": true
	},
	"include": ["js"],
	"exclude": [
		"**/dist/**",
		"**/uploads/**"
	]
}