{
	"compilerOptions": {
		"noUnusedLocals": true,
		"moduleResolution": "nodenext",
		"lib": [
			"ESNext"
		],
		"target": "esnext",
		"rootDir": ".",
		"baseUrl": ".",
		"sourceMap": true,
		"outDir": "build-debug",
		"incremental": true,
		"module": "nodenext",
		"diagnostics": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"assumeChangesOnlyAffectDirectDependencies": true,
	},
	"include": [
		"core/index.ts",
		"core/events/*"
	],
	"exclude": [
		"**/www/**",
		"**/build-prod/**",
		"**/build-debug/**",
		"**/uploads/**",
	]
}